{
   "manifest_version": 2,
   "name": "YouTube Twitch look",
   "version": "1.0",
   "description": "Changes the YouTube live chat UI to look more similar to the Twitch chat's look.",
   "author": "SpiralDev",
   "content_scripts": [ 
      {
         "all_frames": true,
         "css": [ "main.css" ],
         "js": [ "script.js" ],
         "matches": [ "https://www.youtube.com/live_chat*" ]
      } 
   ],
   "icons": {
      "128": "icon.png"
   },
   "browser_specific_settings": {
    "gecko": {
      "id": "twitchy_yt_live_chat@spiraldev",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
